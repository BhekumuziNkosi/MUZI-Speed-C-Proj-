C++
#include <iostream>
#include <vector>
#include <string>
#include <chrono>
#include <limits>
#include <algorithm>
struct PracticeText { std::string name; std::string content; }; struct LeaderboardEntry
{ std::string username; double time; int mistakes; }; std::vector<PracticeText> practice_texts = {
{"Quick Brown Fox", "The quick brown fox jumps over the lazy dog."}, {"Technology Quote", "Technology is best when it brings people together. 
Innovation distinguishes between a leader and a follower. The advance of technology is based on making it fit in
so that you don't really even notice it."}, {"Programming Wisdom", "Code is like humor. When you have to explain it, it's bad.
First, solve the problem. Then, write the code. Any fool can write code that a computer can understand.
Good programmers write code that humans can understand."}, {"Short Practice", "Practice makes perfect. The more you type, the faster you become.
Speed and accuracy go hand in hand."} }; std::vector<LeaderboardEntry> leaderboard; void show_text_options()
{ std::cout << "Select Practice Text:\n"; for (size_t i = 0; i < practice_texts.size(); ++i)
{ std::cout << i + 1 << ". " << practice_texts[i].name << std::endl; } std::cout << "Enter option number: ";
} void add_to_leaderboard(const LeaderboardEntry& entry) { leaderboard.push_back(entry); std::sort(leaderboard.begin(),
leaderboard.end(), [](const LeaderboardEntry& a, const LeaderboardEntry& b) { return a.time < b.time; }); if (leaderboard.size() 
> 10) leaderboard.pop_back(); } void show_leaderboard() { std::cout << "\nLeaderboard\n"; for (size_t i = 0; i < leaderboard.size();
++i) { std::cout << i + 1 << ". " << leaderboard[i].username << " - " << leaderboard[i].time << "s, " << leaderboard[i].mistakes 
<< " mistakes\n"; } } int main() { int choice; std::string username; std::cout << "MuziSpeed Typing Practice\n"; std::cout 
<< "Enter your username: "; std::getline(std::cin, username); while (true) { show_text_options(); std::cin >> choice; 
std::cin.ignore(std::numeric_limits<std::streamsize>::max(),'\n'); // clear input if (choice < 1 || choice > practice_texts.size()) 
break; PracticeText& selected = practice_texts[choice - 1]; std::cout << "\nText to Type:\n" << selected.content << "\n\n"; std::cout 
<< "Press Enter to start.\n"; std::cin.ignore(); auto start = std::chrono::high_resolution_clock::now(); std::string input; std::cout 
<< "Type Here: "; std::getline(std::cin, input); auto end = std::chrono::high_resolution_clock::now(); 
int mistakes = 0; size_t len = std::min(input.length(), selected.content.length()); for (size_t i = 0;
i < len; ++i) { if (input[i] != selected.content[i]) mistakes++; } mistakes += std::max(input.length(), 
selected.content.length()) - len; std::chrono::duration<double> sec = end - start; double time_taken = sec.count(); std::cout
<< "\nResults\nTotal Time: " << time_taken << "s\nMistakes: " << mistakes << "\n"; LeaderboardEntry entry = {username, time_taken, mistakes}; 
add_to_leaderboard(entry); show_leaderboard(); std::cout << "\nType 'q' to quit or any other key to try again: "; char cont; std::cin 
>> cont; std::cin.ignore(std::numeric_limits<std::streamsize>::max(),'\n'); if (cont == 'q' || cont == 'Q') break;
} return 0; }
