<!-- SOUND EFFECTS -->
<audio id="typeSound" src="https://assets.mixkit.co/sfx/preview/mixkit-soft-click-256.wav"></audio>
<audio id="finishSound" src="https://assets.mixkit.co/sfx/preview/mixkit-winning-notification-2014.wav"></audio>

<script>
const texts = {
    tech: "Technology is best when it brings people together. Innovation distinguishes between a leader and a follower.",
    fox: "The quick brown fox jumps over the lazy dog.",
    prog: "Code is like humor. When you have to explain it, it's bad.",
    short: "Practice makes perfect. Speed and accuracy go hand in hand."
};

let startTime = null;
let leaderboard = [];

document.getElementById("practice-text").addEventListener("change", () => {
    const key = document.getElementById("practice-text").value;
    document.getElementById("display-text").innerText = texts[key] || "";
    document.getElementById("typing-area").disabled = true;
    document.getElementById("results").classList.add("hidden");
    document.getElementById("finish-btn").disabled = true;
});

document.getElementById("typing-area").addEventListener("keydown", () => {
    document.getElementById("typeSound").play();
});

document.getElementById("start-btn").onclick = () => {
    document.getElementById("typing-area").value = "";
    document.getElementById("typing-area").disabled = false;
    document.getElementById("typing-area").focus();
    document.getElementById("finish-btn").disabled = false;

    startTime = Date.now();
    document.getElementById("start-btn").disabled = true;
};

document.getElementById("finish-btn").onclick = () => {

    document.getElementById("finishSound").play();

    const input = document.getElementById("typing-area").value;
    const key = document.getElementById("practice-text").value;
    const target = texts[key];

    let mistakes = 0;
    for (let i = 0; i < Math.max(input.length, target.length); i++) {
        if (input[i] !== target[i]) mistakes++;
    }

    const totalTime = ((Date.now() - startTime) / 1000).toFixed(2);

    document.getElementById("total-time").innerText = totalTime + "s";
    document.getElementById("mistakes").innerText = mistakes;
    document.getElementById("results").classList.remove("hidden");

    leaderboard.push({ text: key, time: parseFloat(totalTime), mistakes: mistakes });
    leaderboard.sort((a, b) => a.time - b.time);
    if (leaderboard.length > 10) leaderboard.pop();

    updateLeaderboard();

    document.getElementById("start-btn").disabled = false;
    document.getElementById("finish-btn").disabled = true;
    document.getElementById("typing-area").disabled = true;
};

function updateLeaderboard() {
    const list = document.getElementById("leaderboard-list");
    list.innerHTML = "";
    leaderboard.forEach(entry => {
        const li = document.createElement("li");
        li.innerText = `${entry.time}s - ${entry.mistakes} mistakes`;
        list.appendChild(li);
    });
}
</script>

</body>
</html>


